{% set contentdir = 'centos' %} 

{% if ansible_distribution_major_version == '9' %}
{% if centos_infra_env == 'prod' %}
[centos-mailman3]
name=CentOS mailman3 Prod - el{{ansible_distribution_major_version }}
baseurl=http://mirror.stream.centos.org/SIGs/9/infra/$basearch/mailman-3/
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-mailman3
{% elif centos_infra_env == 'stg' %}
[centos-mailman3]
name=CentOS mailman3 Staging - el{{ansible_distribution_major_version }}
baseurl=https://buildlogs.centos.org/centos/9/infra/$basearch/mailman-3/
enabled=1
gpgcheck=0
{% else %}
[centos-mailman3]
name=CentOS mailman3 dev - el{{ansible_distribution_major_version }}
baseurl=https://repo.dev.centos.org/9/infra/mailman-3/$basearch/
enabled=1
gpgcheck=0
{% endif %}

{% endif %}

